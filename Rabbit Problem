def rabbit_population(months, pairs_per_litter=1):
    """
    Classic rabbit population growth problem
    Each pair produces 'pairs_per_litter' new pairs every month after maturity
    Rabbits mature after 1 month
    """
    if months <= 0:
        return 0
    if months <= 2:
        return 1
    
    # Dynamic programming approach
    dp = [0] * (months + 1)
    dp[1] = dp[2] = 1
    
    for i in range(3, months + 1):
        dp[i] = dp[i-1] + (dp[i-2] * pairs_per_litter)
    
    return dp[months]

def rabbit_problem_recursive(months):
    """Recursive solution (less efficient)"""
    if months <= 0:
        return 0
    if months <= 2:
        return 1
    return rabbit_problem_recursive(months-1) + rabbit_problem_recursive(months-2)

# Usage
months = 12
print(f"Rabbit pairs after {months} months: {rabbit_population(months)}")
print(f"With 3 pairs per litter: {rabbit_population(months, pairs_per_litter=3)}")

# Show monthly growth
print("\nMonthly growth (1 pair per litter):")
for m in range(1, months + 1):
    print(f"Month {m}: {rabbit_population(m)} pairs")
